<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTp.Pantallas.Resultados"
             Title="Resultados">
    <StackLayout Padding="20">
        <Label Text="Resultados:" FontSize="Title" HorizontalOptions="Center" />

        <!-- ListView para mostrar los resultados -->
        <ListView x:Name="listViewResultados" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" TextColor="White" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>